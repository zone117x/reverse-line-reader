{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--testTimeout=3600000",
        "--runInBand",
        "--no-cache",
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
    }
  ]
}